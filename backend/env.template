# Application
APP_NAME=FinanceAI
APP_ENV=development
DEBUG=True
SECRET_KEY=your-secret-key-change-in-production-use-openssl-rand-base64-32

# Database
DATABASE_URL=postgresql+asyncpg://postgres:password@localhost:5432/financeai
# OR Supabase:
# DATABASE_URL=postgresql+asyncpg://postgres:[PASSWORD]@db.[PROJECT].supabase.co:5432/postgres

# Redis
REDIS_URL=redis://localhost:6379/0

# Celery
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# JWT
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Bridge API (Bank connections)
BRIDGE_ENV=sandbox
BRIDGE_CLIENT_ID=your-bridge-client-id
BRIDGE_CLIENT_SECRET=your-bridge-client-secret
BRIDGE_API_KEY=your-bridge-api-key

# Anthropic Claude
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key

# OpenAI (optional, fallback)
OPENAI_API_KEY=sk-your-openai-api-key

# SendGrid
SENDGRID_API_KEY=SG.your-sendgrid-api-key
SENDGRID_FROM_EMAIL=noreply@financeai.fr
SENDGRID_FROM_NAME=FinanceAI

# Stripe (for payments)
STRIPE_PUBLIC_KEY=pk_test_your-stripe-public-key
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# Sentry (error tracking)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json


